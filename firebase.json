{
  "emulators": {
    "functions": {
      "port": 5000
    },
    "firestore": {
      "port": 5001
    },
    "database": {
      "port": 5002
    },
    "hosting": {
      "port": 5005
    },
    "pubsub": {
      "port": 5006
    },
    "ui": {
      "enabled": true
    }
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
